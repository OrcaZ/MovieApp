<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="learning.movie.ui.DetailsActivityFragment">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <!--Detailed Info-->
        <android.support.v7.widget.CardView
            android:id="@+id/movie_info_view"
            style="@style/AppCardViewStyle"
            card_view:cardCornerRadius="4dp"
            android:layout_marginTop="8dp">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:paddingTop="24dp"
                        android:paddingLeft="16dp"
                        android:paddingBottom="16dp"
                        android:layout_weight="1">
                        <TextView
                            android:id="@+id/movie_title_text_view"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="24sp"/>
                        <TextView
                            android:id="@+id/rating_text_view"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:textSize="14sp"
                            android:textStyle="italic|bold"/>
                        <TextView
                            android:id="@+id/release_date_text_view"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:textSize="14sp"/>
                    </LinearLayout>
                    <ImageView
                        android:id="@+id/poster_image_view"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_gravity="center_vertical"
                        android:adjustViewBounds="true"
                        android:padding="16dp"/>
                </LinearLayout>
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:src="#aacccccc"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"/>
                <TextView
                    android:id="@+id/overview_text_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="16dp"
                    android:textSize="14sp"
                    android:text="PogChampPogChampPogChampPogChampPogChampPogChampPogChampPogChampPogChampPogChampPogChampPogChampPogChampPogChampPogChampPogChampPogChampPogChampPogChampPogChamp"/>
            </LinearLayout>

        </android.support.v7.widget.CardView>
        <!--Trailers Placeholder-->
        <android.support.v7.widget.CardView
            android:id="@+id/movie_trailer_view"
            style="@style/AppCardViewStyle"
            card_view:cardCornerRadius="4dp">
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp">
                <ImageView
                    android:layout_width="96dp"
                    android:layout_height="64dp"
                    android:padding="4dp"
                    android:src="@android:color/darker_gray"/>
                <ImageView
                    android:layout_width="96dp"
                    android:layout_height="64dp"
                    android:padding="4dp"
                    android:src="@android:color/darker_gray"/>
                <ImageView
                    android:layout_width="96dp"
                    android:layout_height="64dp"
                    android:padding="4dp"
                    android:src="@android:color/darker_gray"/>

            </LinearLayout>
        </android.support.v7.widget.CardView>
        <!--Reviews Placeholder-->
        <android.support.v7.widget.CardView
            android:id="@+id/movie_review_view"
            style="@style/AppCardViewStyle"
            card_view:cardCornerRadius="4dp">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Reviewer1:"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Placeholder review"/>
            </LinearLayout>
        </android.support.v7.widget.CardView>
    </LinearLayout>
</ScrollView>